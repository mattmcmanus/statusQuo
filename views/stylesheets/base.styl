  Default 5-column, 768 px layout for iPads, netbooks, and IE
  (All other layouts inherit styles from this layout)
  -----------------------------------------------------------
  1      2      3      4      5    
  120px  264px  408px  552px  696px   (24px gutters)
*/
body
  background #222 url(../images/bg.png) repeat
  font-family Helvetica, sans-serif
  padding  0
  margin 0 auto
  color #fff
  -webkit-font-smoothing  antialiased

#curtain
  display none
  background #222
  background rgba(34,34,34,.75)
  width 100%
  position absolute
  top 0
  left 0
  z-index 100

#messages
  margin 0 auto
  max-width 500px
  z-index 1000
  ul
    position absolute
    top 0px
    padding 15px 35px
    border 5px solid rgba(64,64,64,.3)
    border-radius 0 0 5px 5px
    linear-gradient #333,#222
    box-shadow(0 2px 7px rgba(0,0,0,.25))
    &.success
      li
        ok_text()
    &.warning
      li
        warning_text()
    &.error
      li
        error_text()


//                Page Header
// - - - - - - - - - - - - - - - - - - - - - - - 
header#top
  linear-gradient #444444,#0e0e0e
  box-shadow 0 1px 2px rgba(255,255,255,.1)
  padding 10px 1em 3px
  border-bottom 1px solid #161616
  position relative
  a,a:link
    color #fff
    
  h1#logo
    display inline-block
    margin 0
    font-size 1.2em
    line-height 1em
    font-weight 700
    em font-size .8em
    li
      padding 3px
      
  #eyebrow
    position absolute 
    right 0 
    top -2px
    padding 7px 10px
    font-size .9em
    font-weight 700
    a
      display inline-block
      margin 0 .75em
      text-shadow 0 1px 2px rgba(255,255,255,.1)
      
    img.picture
      height 20px
      width 20px
      position relative
      top 5px
      left -7px
    span
      margin 0 1em 0 0
      color #ccc
  
  #login
    height 24px
    width 151px
  .buttons
    left 120px
    top 6px
    #server_add
      background-image url(/images/add.png) 
    
    .refresh
      overflow visible
      &:hover .countdown
        display inline
      
  .countdown
    display none
    position absolute
    top 5px
    left 50px
    width 150px
    color #999
    text-indent 0
    font-weight 400
    strong
      color #eee


//                Front page dash
// - - - - - - - - - - - - - - - - - - - - - - -    
.front
  #main h2
    background none
    color rgba(225,225,225,.2)
    text-shadow -1px -1px 2px rgba(0,0,0,.3)
    clear both


//               A Server
// - - - - - - - - - - - - - - - - - - - - - - -
.server
  box-shadow(0 2px 7px rgba(0,0,0,.25))
  border 1px solid #262626
  width 100%
  max-width 600px
  border-radius 7px
  margin 2em auto
  linear-gradient #333333,#222222
  transition box-shadow 200ms ease-in
  color #fff
  
  header
    height auto
    border-top-radius 7px
    linear-gradient #222222,#161616
    padding 1px 5px
    
    h2, .types, .tyoe
      display inline-block
    h2
      color #fff
      font-size 1.5em
      text-shadow 0px -1px 1px rgba(255,255,255,.2)
      padding-left 6px
      em
        font-size .75em
        color #666
        margin-left 8px
        text-shadow 0px -1px 1px rgba(0,0,0,.25)
    .types
      position relative
      top -2px
      .type
        border-radius 5px
        linear-gradient #444444,#333333
        color #eee
        display inline-block
        padding 0 8px
        margin 0 2px
        border 1px solid #333
        text-shadow -1px -1px 2px rgba(0,0,0,.3)
        font-size .75em
        font-weight 700
        text-transform uppercase
        &.production
          background #060
        
    .buttons
      top 0
      right 0
      .button
        margin 5px
        &.refresh
          top 3px
        &.edit
          text-indent 0
          &:hover
            linear-gradient #444444,#222222
            
  section
    h3
      line-height 1.5em
    &.services
      height auto
    &.ping
      height 0
      position relative
      transition height 200ms ease-out
      #ping_graph
        opacity 0
        transition opacity 200ms ease-out
      .responseTime
        z-index 100
        position absolute
        right 5px
        top 33px
        font-size 2em
        font-family monospace
        em
          color #999
          font-style normal
          margin-left 5px
  footer
    clear both

.server.pinging
  .ping
    height 100px
    #ping_graph
      opacity 1
      
.server.thumb
    width 200px
    margin 1em
    float left
    &:hover
      box-shadow(0 3px 15px rgba(0,0,0,.6))
      cursor pointer

  header
    height 25px

    h3
      margin 5px
      padding 0
      font-size 1em
      line-height 1em
      font-weight 700
      text-shadow 0 -1px 2px #111
    .buttons
      right 2px
      top -3px
      left auto

  section.info
    display none

  section
    &:last-child
      border-bottom-radius 7px
    &.services
      border-top 1px solid #2c2c2c
      border-bottom 1px solid #222
      linear-gradient(#292929,#222222)
      position relative
      height 30px
      .loader
        opacity 0
        position absolute
        top 0 
        left 0
        width 100%
        height 29px
        z-index 50
        background rgba(34,34,34,.75) url(../images/ajax-loader.gif) no-repeat center center
        transition opacity .25s ease-in-out
      li
        display inline-block
        text-align  center
        font-weight 700
        font-size 1.2em
        text-overflow ellipsis-word
        padding 2px 15px
        .count
          font-weight 700
          margin-right 5px
    
//         Services
//- - - - - - - - - - - - - - - - - - - -    
.services
  height auto
  border-right 1px solid #333
  .service
    position relative
    linear-gradient(#292929,#222222)
    padding 4px 7px
    div
      display inline-block
      padding 2px 4px
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
    .loader
      display none
    .name
      font-weight 700
    .url
      color #666
      font-size .9em
      width 200px
      text-shadow none
    .message
      position absolute
      right 10px
      top 5px
      font-weight 700
      em
        color #666
        opacity .5
        font-weight 400
        font-size .8em
        padding 0 2em
        text-shadow none
      &:hover em
        opacity 1
        
    .details
      display none
      clear both
      display block
    
    
.server 
  &.checking
    section.services .loader
      opacity 1
    a.refresh
      opacity 1
      -webkit-animation-name rotate
      -webkit-animation-duration 7s
      -webkit-animation-iteration-count infinite
      -webkit-animation-direction normal
      -webkit-animation-timing-function ease-in
  &.warning
    box-shadow (2px 1px 10px darken(warning, 25%))
    &:hover
      box-shadow (2px 3px 20px darken(warning, 25%))
  &.error 
    box-shadow (2px 1px 10px darken(error, 20%))
    -webkit-animation-name  pulse
    -webkit-animation-duration 1s
    -webkit-animation-iteration-count infinite
    -webkit-animation-direction alternate
    -webkit-animation-timing-function ease-in-out
    &:hover
      box-shadow (2px 3px 20px darken(error, 25%))
  section.services
    li.ok 
      color ok_text
      text-transform uppercase
    li.warning
      color warning_text
      text-transform capitalize
    li.error
      color error_text
      text-transform capitalize      

//          General forms!
//- - - - - - - - - - - - - - - - - - - - 

form
  li
    padding .75em 18px 1em
    linear-gradient #333333,#292929
    position relative
    &.checkboxes
      ul, li
        display inline-block
      & > ul > li label
        width auto
    li
      padding .5em 0
      margin-right 1em
      background transparent
