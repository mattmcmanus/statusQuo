@import "reset.css"
@import "css3"

// Variables
sprites = url(../images/icons.png)



//                Typography
// - - - - - - - - - - - - - - - - - - - - - - -
body
  font  14px/1.5 Helvetica, Arial, sans-serif

p
  margin 0 0 1em

h1
  font-size  42px
  line-height  46px
  letter-spacing  -1px
  font-weight 700

h2
  font-size  24px
  line-height  28px
  letter-spacing  -1px
  linear-gradient #222222,#161616
  text-shadow 0 1px 2px rgba(255,255,255,.5)
  padding .25em 18px
  font-weight 700

h3
  font-size  16px
  line-height  20px
  font-weight 700
  linear-gradient #222222,#161616
  text-shadow 0 1px 2px rgba(255,255,255,.5)
  padding .5px 8px

small
  font-size  13px
  line-height  18px

selection
  background rgb(255,255,0)
-moz-selection
  background rgb(255,255,0)
  

//               Color Presets
// - - - - - - - - - - - - - - - - - - - - - - -

hightlight = #19e

//Status Colors
ok = #090
warning = #990
error = #900

ok_text = lighten(ok, 90%)
warning_text = lighten(warning, 90%)
error_text = lighten(error, 90%)

.s200, .ok
  color ok + #ccc
  text-shadow ok 0 0 3px
 
.s300,.s301,.s302, .warning
  color warning + #ccc
  text-shadow warning 0 0 3px

.s404,.s500, .s403, .error
  error_text
  color error + #ccc
  text-shadow error 0 0 3px  
  
a, a:link 
  text-decoration none
  color hightlight
  
a:hover
  text-decoration underline


//               Buttons
// - - - - - - - - - - - - - - - - - - - - - - -
.button
  border 1px solid #222
  border-radius 6px
  color #fff
  font-size .9em
  font-weight 700
  text-transform small-caps
  text-decoration none
  display inline-block
  margin 3px 10px 3px 0
  padding 5px 15px
  text-align center
  text-shadow 0 -1px 1px rgba(34,34,34,.3)
  linear-gradient #262626,#060606
  box-shadow(inset 0px 0px 5px rgba(34,34,34,.5), 0 1px 7px rgba(34,34,34,.5))
  transition opacity 200ms ease-out
  &:link
    color #fff
  &:hover
    linear-gradient #333,#111
    color #eee
    cursor pointer
    text-shadow 0 -1px 2px rgba(34,34,34,.5)
    text-decoration none
  &.save
    linear-gradient #114411,#002200
    &:hover 
      linear-gradient #226622,#114411
    
.button.transparent
  background transparent no-repeat center center
  border none
  display block
  height 14px
  width 15px
  margin 2px
  opacity .25
  padding 5px 3px
  text-indent -9999px
  transition(opacity,.25s)
  &:hover
    opacity 1
    background-repeat no-repeat
    background-position center center
    
.buttons
  position absolute
  top 0
  left 0
  .button
    display inline-block
    
// Specfic repeating button classes
.button
  &.refresh
    background-image url(/images/server_refresh.png)

a.cancel
  color #aaa
  linear-gradient #444,#333 
  font-size .75em

a.delete, .confirm .yes
  color #fff
  linear-gradient #500,#300 
  border-color #400
  box-shadow(0 2px 7px rgba(64,0,0,.5))
  &:hover
    linear-gradient #700,#500
  
