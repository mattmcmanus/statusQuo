@import "reset.css"
@import "css3"

// Variables
sprites = url(../images/icons.png)

//Status Colors
ok = #090
warning = #990
error = #900

// Status Code COLORS!
ok_text()
  color ok + #ccc
  text-shadow ok 0 0 3px

warning_text()
  color warning + #ccc
  text-shadow warning 0 0 3px

error_text()
  color error + #ccc
  text-shadow error 0 0 3px

.s200
  ok_text
 
.s300,.s301
  warning_text

.s404,.s500
  error_text
  
//  Typography presets
//  -----------------
body
  font  14px/1.5 Helvetica, Arial, sans-serif

p
  margin 0 0 1em

h1
  font-size  42px
  line-height  46px
  letter-spacing  -1px
  font-weight 700

h2
  font-size  24px
  line-height  28px
  letter-spacing  -1px
  font-weight 400

h3
  font-size  16px
  line-height  20px
  font-weight 400

small
  font-size  13px
  line-height  18px

selection
  background rgb(255,255,0)
-moz-selection
  background rgb(255,255,0)
  
a, a:link 
  text-decoration none
  color #900
  
a:hover
  text-decoration underline

.button
  color #fff
  font-size .9em
  font-weight 700
  text-transform small-caps
  text-decoration none
  display inline-block
  margin 3px 10px 3px 0
  padding 5px 15px
  border 1px solid #222
  border-radius 6px
  text-align center
  text-shadow 0 -1px 1px rgba(255,255,255,.3)
  linear-gradient #262626,#060606 
  box-shadow(inset 0px 0px 5px rgba(34,34,34,.5))
  &:hover
    linear-gradient #333,#111
    color #eee
    cursor pointer
    text-shadow 0 -1px 2px rgba(34,34,34,.5)
    text-decoration none
  &.save
    linear-gradient #114411,#002200
    &:hover 
      linear-gradient #226622,#114411
a.cancel
  color #aaa
  text-shadow 0 1px 1px rgba(34,34,34,.4)
  linear-gradient #444,#333 
  font-size .75em
a.delete, .confirm .yes
  color #fff
  linear-gradient #500,#300 
  border-color #400
  box-shadow(0 2px 7px rgba(64,0,0,.5))
  &:hover
    linear-gradient #700,#500 
  
/*
  Default 5-column, 768 px layout for iPads, netbooks, and IE
  (All other layouts inherit styles from this layout)
  -----------------------------------------------------------
  1      2      3      4      5    
  120px  264px  408px  552px  696px   (24px gutters)
*/
body
  background #222 url(../images/bg.png) repeat
  font-family Helvetica, sans-serif
  padding  0
  margin 0 auto
  color #fff
  -webkit-font-smoothing  antialiased

#messages
  position relative
  margin 0 auto
  max-width 500px
  z-index 1000
  ul
    position absolute
    top 0px
    padding 15px 35px
    border 5px solid rgba(64,64,64,.3)
    border-radius 0 0 5px 5px
    linear-gradient #333,#222
    box-shadow(0 2px 7px rgba(0,0,0,.25))
    &.success
      li
        ok_text()
    &.warning
      li
        warning_text()
    &.error
      li
        error_text()

header
  background #515151  /* old browsers */
  background -moz-linear-gradient(top, #515151 0%, #262626 51%, #1c1c1c 52%, #0e0e0e 100%)  /* firefox */
  background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#515151), color-stop(51%,#262626), color-stop(52%,#1c1c1c), color-stop(100%,#0e0e0e))  /* webkit */
  box-shadow 0 1px 2px rgba(255,255,255,.1)
  padding 10px 1em 8px
  border-bottom 1px solid #161616
  a,a:link
    color #fff
    
  h1#logo
    display inline-block
    margin 0
    font-size 1.2em
    line-height 1em
    font-weight 400
    em font-size .8em
    li
      padding 3px
      
  #eyebrow
    position absolute 
    right 0 
    top 0
    padding 7px 10px
    font-size .9em
    font-weight 700
    a
      display inline-block
      margin 0 .75em
      text-shadow 0 1px 2px rgba(255,255,255,.1)
      
    img.picture
      height 20px
      width 20px
      position relative
      top 5px
      left -7px
    span
      margin 0 1em 0 0
      color #ccc
  
  #login
    height 24px
    width 151px
    
  #server_add
    text-indent -9999px
    width 10px
    height 13px
    background-image url(/images/add.png) 
    background-repeat no-repeat
    background-position center center
 
 
div.server
  color #fff
  margin 1em
  float left
  min-width 200px
  max-width 275px
  border-radius 7px
  box-shadow(0 2px 7px rgba(0,0,0,.25))
  border 1px solid #262626
  position relative
 
  header
    border-top-radius 7px
    linear-gradient #222222,#161616
    padding 1px 5px
    height 25px
    position relative
   
    h2
      margin 5px .25em 0
      font-size 1em
      line-height 1em
      font-weight 700
      text-shadow 0 -1px 2px #111
   
    nav
      position absolute 
      right 2px 
      top 4px
      a
        overflow hidden
        display inline-block
        text-indent -9999px
        height 20px
        width 20px
        background transparent no-repeat center center
        margin 2px
        opacity .25
        transition(opacity,.25s)
       
        &.refresh
          height 14px
          width 15px
          background url(../images/server_refresh.png) no-repeat 0 0
       
        &.ping
          background-image url(../images/server_ping.png)
        
        &.edit
          background-image url(../images/server_edit.png)  
          
        &:hover
          opacity 1
 
  .console
    display none
    position absolute  
    top 28px 
    left 0
    z-index 100
    width 99%
    height 200px
    border-bottom-radius 7px
    border 1px solid #363636
    border-top none
    linear-gradient #262626, #161616
   
    .button
      position absolute  
      bottom 5px  
      left 40%
   
  section.info
    display none
   
  section
    .service
      border-top 1px solid #333
      border-bottom 1px solid #222
      linear-gradient(#333333,#222222)
      padding 5px 10px
      position relative
      .loader
        display none
        opacity 0
        position absolute
        top 0 
        left 0
        width 100%
        height 60px
        z-index 50
        background rgba(34,34,34,.75) url(../images/ajax-loader.gif) no-repeat center center
        transition opacity .25s ease-in-out
     
      li
        list-style none
        &.name h3
          font-size 1.3em
          line-height 1.1em
          width 120px
        &.url
          font-size 0.9em
        &.message
          text-align  center
          font-weight 700
          font-size 1.2em
          text-overflow ellipsis-word
          height 29px
     
      &.checking 
        .loader
          opacity 1
      &:last-child
        border-bottom-radius 7px
   
.server 
  &.error 
    box-shadow 0px 1px 10px rgba(221,102,102,.5)
    -webkit-animation-name  pulse
    -webkit-animation-duration 1s
    -webkit-animation-iteration-count infinite
    -webkit-animation-direction alternate
    -webkit-animation-timing-function ease-in-out
  
  &.checking
    a.refresh
      opacity 1
      -webkit-animation-name rotate
      -webkit-animation-duration 7s
      -webkit-animation-iteration-count infinite
      -webkit-animation-direction normal
      -webkit-animation-timing-function ease-in


/*          Content!
- - - - - - - - - - - - - - - - - - - - */
ul
  li
    list-style none
    
form
  li
    padding .75em 18px 1em
    linear-gradient #333333,#292929
    &.checkboxes
      ul, li
        display inline-block
      & > ul > li label
        width auto
    li
      padding .5em 0
      margin-right 1em
      background transparent
    &.confirming, &.deleted
      linear-gradient #300 #200
  label,.label
    display inline-block
    font-size .9em
    font-weight 700
    width 150px
  input[type=text],input[type=email],input[type=number],input[type=url]
    width 225px
    background rgba(255,255,255,.75)
    border 1px solid #222
    &:focus
      background #fff
  a.add
    display inline-block
    background url(/images/add.png) no-repeat 0 center
    padding 3px 5px 3px 20px
    color white
    margin 0 0 0 .25em
  .buttons
    border-radius 0 0 7px 7px
    padding 12px 18px
    position relative
    .delete, .confirm
      position absolute
      right 8px
      top 12px
  .confirm
    font-weight 700
    .yes
      margin-left 8px
      
form#account_setup
  .screen_name
    .profile_picture, h2
      display inline-block
    .profile_picture
      padding 3px
      background rgba(255,255,255,.1)
      border 1px solid #555
    h2
      font-weight 700
      position relative
      top -13px
      left 10px

form.server
  .services
    .service
      position relative
      .message
        display none
      .confirm,.message
        text-align center
        position absolute
        top 30px
        left 140px
      .message
        font-weight 700
        top 40px
        
    ul li
      display inline-block
    .type
      display block
      padding 0
      margin 0
    .name, .url
      input
        width 200px
    .port
      input
        width 50px
    .type.checkboxes
      .label
        width auto
    a.delete
      opacity .5
      display inline-block
      text-indent -9999px
      background url(/images/delete.png) no-repeat center center
      box-shadow none
      &:hover
        background-color none
        opacity 1
      
      

.page #page, .front.not-logged-in #page
  width 600px
  border-radius 7px
  box-shadow(0 2px 7px rgba(0,0,0,.25))
  border 1px solid #262626
  linear-gradient #333333,#222222
    
#page
  margin 1em auto
  
  header
    border-top-radius 7px
    linear-gradient #222222,#161616
    padding 1px 5px
    position relative
    
    h1
      font-size 1.4em
      text-shadow 0 1px 2px rgba(255,255,255,.5)
      padding .25em 18px
      font-weight 700
  
  h2
    linear-gradient #222222,#161616
    font-size 1.2em
    text-shadow 0 1px 2px rgba(255,255,255,.5)
    padding .25em 18px
    font-weight 700
    
  .content
    padding .5em 1em
