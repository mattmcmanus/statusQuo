      linear-gradient #300 #200
      li, & > a, & > input
        opacity .1
  label,.label
    display inline-block
    font-size .9em
    font-weight 700
    width 125px
  input[type=text],input[type=email],input[type=url],input[type=password],input[type=number]
    width 225px
    border 1px solid #444
    linear-gradient #ccc, #eee
    border-radius 6px
    line-height 1.5em
    padding .25em .5em
    box-shadow(0 1px 1px rgba(255,255,255,.3))
