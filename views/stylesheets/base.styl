    margin 0 0 0 .25em
  .buttons
    linear-gradient #333333,#292929
    position relative
    border-radius 0 0 7px 7px
    padding 12px 18px
    .delete, .confirm
      position absolute
      right 8px
      top 12px
  .confirm
    font-weight 700
    .yes
      margin-left 8px

.ui-autocomplete
  width 225px !important
  linear-gradient #444444, #333333
  li
    padding 1px 8px
      
form#account_setup
  .screen_name
    padding 1em 18px
    .profile_picture
      display inline-block
      padding 3px
      background rgba(255,255,255,.1)
      border 1px solid #555
    h2
      font-weight 700
      position absolute
      top 27px
      left 70px
      background transparent

form.server
  .services
    .service
      position relative
      .message
        display none
      .confirm,.message
        position absolute
        top 19px
        left 140px
      .message
        font-weight 700
        top 26px
        text-shadow 0px 1px 5px rgba(34,34,34,.75)
    ul li
      display inline-block
    .public
      clear right
      width 300px
    .name, .url
      input
        width 205px
    .name
      clear left
    .port
      input
        width 35px
    .type.checkboxes
      .label
        width auto
    .delete 
      padding 0
      margin 0
      a
        opacity .35
        display inline-block
        text-indent -9999px
        background url(/images/delete.png) no-repeat center center
        box-shadow none
        width 30px
        &:hover
          background-color none
          opacity 1

.type-server
  .default
    display none
      

#main
  .psst
    position absolute
    left 142px
    top 40px
  
  header
    border-top-radius 7px
    linear-gradient #222222,#161616
    padding 1px 5px
    position relative
    
    h1
      font-size 1.4em
      text-shadow 0 1px 2px rgba(255,255,255,.5)
