!!! 5
html(lang="en")
  head
    -if (title)
      title= title
    -else
      title StatusQuo
    
    //Meta
    meta(charset="utf-8")
    | <meta name="viewport" content="initial-scale=1.0, width=device-width, maximum-scale=1.0"/>
    
    // Javscripts
    script(type = "text/javascript",src = "http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js")
    //script(type = "text/javascript",src = "/socket.io/socket.io.js")
    script(type = "text/javascript",src = "/javascripts/statusQuo.js")
    // Stylesheets
    link(rel="stylesheet", href="/stylesheets/base.css")
  body(class = body_classes)
    header
      h1.ok
        em the
        | StatusQuo
      nav#eyebrow
        - if (session &&session.user)
          img.picture(src=session.user.picture, alt=session.user.name)
          span Hello #{session.user.name}!
          a(href="/logout") logout
        - else
          a#login(href="/login")
            img(src="http://a0.twimg.com/images/dev/buttons/sign-in-with-twitter-d.png")
    #page!= body